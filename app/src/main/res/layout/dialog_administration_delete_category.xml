<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/DialogDeleteCategory_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/TextDeleteCategory"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/DialogDeleteCategory_Text"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_alignParentStart="true">

                <Button
                android:id="@+id/DialogDeleteCategory_ButtonNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ButtonNoDeleteCategory" />

                <Button
                android:id="@+id/DialogDeleteCategory_ButtonYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ButtonYesDeleteCategory" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
